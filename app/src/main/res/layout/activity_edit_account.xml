<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccount">


    <EditText

        android:id="@+id/updateacccomfirmpassword"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customtextfield"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateaccpassword"
        tools:ignore="MissingConstraints,RtlCompat" />


    <EditText
        android:id="@+id/updateaccCellnumber"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:background="@drawable/customtextfield"
        android:hint="Cellphone Number"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219"
        tools:ignore="MissingConstraints,RtlCompat" />


    <EditText
        android:id="@+id/updateaccUsername"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:background="@drawable/customtextfield"
        android:hint="User Name"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateaccCellnumber"
        app:layout_constraintVertical_bias="0.041"
        tools:ignore="MissingConstraints,RtlCompat" />

    <EditText
        android:id="@+id/updateaccfirstname"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:background="@drawable/customtextfield"
        android:hint="First Name"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateaccUsername"
        app:layout_constraintVertical_bias="0.06"
        tools:ignore="MissingConstraints,RtlCompat" />

    <EditText
        android:id="@+id/updateacclastname"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:background="@drawable/customtextfield"
        android:hint="Last Name"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateaccfirstname"
        app:layout_constraintVertical_bias="0.051"
        tools:ignore="MissingConstraints,RtlCompat" />

    <EditText
        android:id="@+id/updateaccemail"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customtextfield"
        android:hint="Email"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateacclastname"
        tools:ignore="MissingConstraints,RtlCompat" />

    <EditText
        android:id="@+id/updateaccpassword"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customtextfield"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateaccemail"
        tools:ignore="MissingConstraints,RtlCompat" />

    <Button
        android:id="@+id/updateaccconbtn"
        android:layout_width="199dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_btn2"
        android:text="Update"
        android:textColor="@color/colorMainOrange"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateacccomfirmpassword"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/updateaccaccountheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorMainBlack"
        app:layout_constraintBottom_toTopOf="@+id/updateaccsubheading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/updateaccsubheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Lets edit your account!"
        android:textColor="@color/colorMainBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/updateaccCellnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />



</androidx.constraintlayout.widget.ConstraintLayout>